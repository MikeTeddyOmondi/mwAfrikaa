<div>
<p class="mt-3" style="display:inline-block;">Welcome <%= user.name %></p>
<a href="/users/logout" class="btn btn-secondary mt-3" style="float:right;"><i class="fa fa-sign-out"></i>Logout</a>
</div>
<div>
    <h1 class="mb-4" style="display:inline-block;">Blogs</h1>
    <a href="/articles/new" class="btn btn-success mt-3" style="float:right;">New Article</a>
</div>
<% articles.forEach(article => { %>
    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title"><%= article.title %></h4>
            <div class="card-subtitle text-muted mb-2">
                <%= article.createdAt.toLocaleDateString() %>
            </div> 
            <div class="card-text mb-2"><%= article.description %></div>
            <a href="articles/<%= article.slug%>" class="btn btn-primary">Read more</a>
            <a href="articles/edit/<%= article.id%>" class="btn btn-info">Edit</a>
            <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
<% }) %>